<%- include("partials/header") %>

<h1> <%=Compose%> </h1>

<form action="/compose" method="post">

  <div class="form-group">
    <!-- single line text -->
    <label style='font-family: cursive;' for="titleLine">Title</label><br>
    <input class="form-control" type="text" name="titleLine"><br>
  </div>

  <div class="form-group">
    <!-- multi line text -->
    <label style='font-family: cursive;' for="NewPost">Post</label><br>
    <textarea class="form-control" name="NewPost" rows="8" cols="111">
    </textarea> <br>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>


